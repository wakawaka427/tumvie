<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="240dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:textSize="@dimen/text_size_ss"
            android:id="@+id/favorite_list_source_blog_name_text"
            android:textColor="@color/clickable_text_color"
            android:onClick="onClickFavoriteListBlogName"/>

        <ImageButton
            android:id="@+id/favorite_trash_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:background="@null"
            android:src="@drawable/icon_trash"
            android:onClick="onClickFavoriteDeleteButton"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:id="@+id/fragment_favorite_list_thumbnail"
        android:layout_gravity="center"
        android:contentDescription="@string/search_list_thumbnail_no_image"
        android:onClick="onClickThumbnailFromFavorite"/>

</LinearLayout>